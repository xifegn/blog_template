syntax = "v1"

info(
	title: "heart heart"
	desc: "S"
	author: "ikun"
	email: "hahahai@qq.com"
	version: "0.0"

)

type AddLikeReq {
	SummaryId string `json:"summaryId"`
	UserId    string `json:"userId"`
}

type AddLikeResp {
	Code int64 `json:"code"`
}

type RemoveLikedReq {
	SummaryId string `json:"summaryId"`
	UserId    string `json:"userId"`
}
type RemoveLikedResp {
	Code int64 `json:"code"`
}

@server(
	jwt: Auth
	group: like
)
service main-api{
	@handler addLike
	post /user/addlike (AddLikeReq) returns (AddLikeResp)

	@handler removeLike
	post /user/removeLike (RemoveLikedReq) returns (RemoveLikedResp)
}